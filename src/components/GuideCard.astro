---
const { href = '#', title = '', description = '', coverImage = '', tags = [] } = Astro.props;
---
<a href={href} class="group block overflow-hidden rounded-2xl bg-white shadow-xl ring-1 ring-slate-200 transition hover:-translate-y-0.5 hover:shadow-2xl dark:bg-slate-800 dark:ring-slate-700">
  {coverImage && (
    <div class="aspect-[4/3] overflow-hidden">
      <img src={coverImage} alt={title} class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
    </div>
  )}
  <div class="p-4">
    <h3 class="text-lg font-bold">{title}</h3>
    {description && <p class="mt-1 line-clamp-2 text-sm text-slate-600 dark:text-slate-300">{description}</p>}
    {tags?.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.map((t) => <span class="rounded-full bg-teal-100 px-3 py-1 text-xs font-medium text-teal-800 dark:bg-teal-900/40 dark:text-teal-300">{t}</span>)}
      </div>
    )}
  </div>
</a>
