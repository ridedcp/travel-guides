---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import GuideCard from '../../../components/GuideCard.astro';

// Carga todas las guías MDX de esta carpeta y obtén url + frontmatter
const guides = (await Astro.glob('./*.mdx'))
  .map(({ url, frontmatter }) => ({ url, ...frontmatter }))
  .sort((a, b) => a.title.localeCompare(b.title));
---
<BaseLayout lang="en" title="Travel Guides — EN">
  <section class="rounded-3xl bg-gradient-to-br from-teal-500 to-blue-600 p-10 text-white">
    <h1 class="text-4xl font-extrabold">Travel Guides</h1>
    <p class="mt-2 opacity-90">Europe & the Americas</p>
  </section>

  <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {guides.map(g => (
      <GuideCard href={g.url} title={g.title} description={g.description} coverImage={g.coverImage} tags={g.tags} />
    ))}
  </div>
</BaseLayout>
